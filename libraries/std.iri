// Symbolic definitions

proc nothing void -> void
| nop
end
proc pass void -> void nothing end

proc id gen -> gen
  pass
end

// Stack operations

unsafe proc drop gen -> void
// ABC -> BC
| pop rax
end

proc ddrop (gen, gen) -> void
// ABC -> C
  drop drop
end

proc dropd (gen, gen) -> gen // ABC -> AC
// Drop down; pops the penultimate element that's on top
  swap drop
end

proc dropdd (gen, gen, gen) -> gen // ABC -> A
  swap third ddrop
end

unsafe proc dupl (gen) -> (gen, gen) // A -> AA
| pop rax
| push rax
| push rax
end

proc ddupl gen -> (gen, gen, gen) // A -> AAA
  dupl dupl
end

unsafe proc swap (gen, gen) -> (gen, gen) // AB -> BA
| pop rax
| pop rbx
| push rax
| push rbx
end

unsafe proc third (gen, gen, gen) -> (gen, gen, gen) // ABC -> CAB
// Gets the third last element of the stack and moves it on top
| pop rax
| pop rbx
| pop rcx
| push rbx
| push rax
| push rcx
end


// Extended stack operations

proc sDts (gen, gen)
       -> (gen, gen, gen) // AB -> BAB
  swap dupl third swap
end

proc Dt (gen, gen, gen)
     -> (gen, gen, gen, gen) // AB -> BAA
  dupl third
end

proc st (gen, gen, gen)
     -> (gen, gen, gen) // ABC -> CBA
  swap third
end

// Procedures on strings

unsafe proc lens str -> int
| extern strlen
| pop rdi
| call strlen
| push rax
end
proc strlen str -> int lens end


// Procedures on integers

proc is_even int -> int
  mod: 2 eq: 0
end

proc is_odd int -> int
  mod: 2 not % eq: 0;
end

unsafe proc itos int -> str
// Integer to string
  alloc int itos_acc // buffer
| extern sprintf
| pop rdx         ; integer to tranform
  @itos_acc
| pop rdi         ; buffer
  "%d"
| pop rsi         ; format
| xor rax, rax    ; no more args
| call sprintf
  @itos_acc
end


// Print functions

unsafe proc printi int -> void
| extern printf
  "%d"
| pop rdi         ; format
| pop rsi         ; number to print
| xor rax, rax    ; no more args
| call printf 
end

unsafe proc printni int -> void
| extern printf
  "%d\n"
| pop rdi         ; format
| pop rsi         ; number to print
| xor rax, rax    ; no more args
| call printf 
end

unsafe proc prints str -> void
| extern printf
    "%s"
| pop rdi         ; format
| pop rsi         ; number to print
| xor rax, rax    ; no more args
| call printf 
end

unsafe proc printns str -> void
| extern printf
  "%s\n"
| pop rdi         ; format
