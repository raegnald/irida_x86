// Operations on integers

unsafe proc add (int, int) -> int
| pop rax
| pop rbx
| add rax, rbx
| push rax
end
 
unsafe proc sub (int, int) -> int
| pop rbx
| pop rax
| sub rax, rbx
| push rax
end

unsafe proc mul (int, int) -> int
| pop rax
| pop rbx
| mul rbx
| push rax
end

unsafe proc div (int, int) -> int
| xor rdx, rdx
| pop rbx
| pop rax
| div rbx
| push rax
end

unsafe proc mod (int, int) -> int
| xor rdx, rdx
| pop rbx
| pop rax
| div rbx
| push rdx
end

proc succ int -> int
  1 add
end

proc pred int -> int
  -1 add
end

proc is_zero int -> int
  0 eq
end


// Logic

unsafe proc eq (int, int) -> int
| mov rcx, 0
| mov rdx, 1
| pop rax
| pop rbx
| cmp rax, rbx
| cmove rcx, rdx
| push rcx
end

unsafe proc either (int, int) -> int
// Logical or
| pop rax
| pop rbx
| or rax, rbx
| push rax
end
proc or (int, int) -> int either end

unsafe proc both (int, int) -> int
// Logical and
| pop rax
| pop rbx
| and rax, rbx
| push rax
end
proc and (int, int) -> int both end

unsafe proc not int -> int
| pop rax
| mov rbx, 1
| xor rax, rbx
| push rax
end

macro compare
| pop rax
| pop rbx
| cmp rax, rbx
end

macro compareI
| pop rbx
| pop rax
| cmp rax, rbx
end

unsafe proc gt (int, int) -> int
| pop rbx
| add rbx, 1
| push rbx
  $compare
| jg _gt_true
| jmp _gt_false
| _gt_true:
    1
  | jmp _gt_end
| _gt_false:
  0
| _gt_end:
  not
end

unsafe proc le (int, int) -> int
  $compareI
| jle _le_true
| jmp _le_false
| _le_true:
    1
  | jmp _le_end
| _le_false:
  0
| _le_end:
end

unsafe proc lt (int, int) -> int
  $compareI
| jl _lt_true
| jmp _lt_false
| _lt_true:
    1
  | jmp _lt_end
| _lt_false:
  0
| _lt_end:
end

unsafe proc ge (int, int) -> int
  $compareI
| jge _ge_true
| jmp _ge_false
| _ge_true:
    1
  | jmp _ge_end
| _ge_false:
  0
| _ge_end:
end



